{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/html2md/bin/Debug/netcoreapp3.1/html2md.dll",
            "args": [
                "-u", 
                "http://goatly.net/2010/1/29/Creating-a-lightweight-in-memory-full-text-indexer.aspx", 
                "-o", 
                "c:\\temp\\md"
            ],
            "cwd": "${workspaceFolder}/src/html2md",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}